   "author": "Tim Kadlec",
   "date": "2019-10-16T22:22:55.000Z",
   "description": null,
   "image": "https://www.coindesk.com/wp-content/uploads/2018/01/telegram-150x150.jpg",
   "logo": "https://static.coindesk.com/images/facebook/default.51070683.png",
   "publisher": "CoinDesk",
   "url": "https://timkadlec.com/remembers/2019-08-30-less-data-doesnt-mean-a-lesser-experience/",
   "video": null,
   "lang": "en",
   "charset": "UTF-8",
   "viewport": "width=device-width, initial-scale=1.0",
   "link:preconnect dns-prefetch": "https://spdcrv.global.ssl.fastly.net/",
