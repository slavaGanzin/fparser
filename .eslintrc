globals:
  R: false
  debug: false
  process: false
env:
  node: true
  commonjs: true
  es6: true
extends: eslint:recommended
rules:
  block-scoped-var : error
  no-shadow: error
  no-undef: off
  dot-notation: error
  no-else-return: error
  no-empty-pattern: error
  no-extra-bind: error
  no-implicit-coercion: error
  no-magic-numbers: warn
  no-useless-escape: error
  prefer-arrow-callback: warn
  no-useless-return: error
  callback-return: error
  no-use-before-define: error
  no-floating-decimal: error
  no-invalid-this: error
  no-var: error
  prefer-spread: error
  no-unused-vars: warn
  no-console: warn
  no-implicit-globals: warn
  no-labels: error
  no-lone-blocks: error
  
  no-multi-spaces:
    - warn
    - exceptions:
        VariableDeclarator: true
  space-in-parens:
    - error
    - never
  no-cond-assign:
    - error
    - always
  no-extra-parens:
    - warn
    - all
  indent:
    - warn
    - 2
  camelcase:
    - warn
    - properties: always
  complexity:
    - error
    - 3
  linebreak-style:
    - error
    - unix
  dot-location:
    - error
    - property
  curly:
    - error
    - multi-or-nest
  quotes:
    - off
    - double
  semi:
    - warn
    - never
